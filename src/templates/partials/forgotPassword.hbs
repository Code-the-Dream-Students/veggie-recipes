  <!---------------------------
     FORM MODAL FORGOT PASSWORD
  ----------------------------->
  <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-light text white">
          <div class="logo-text "><span>Vege</span>loper<small>&copy;</small></div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>

        </div>
        <!------modal body---->
        <div class="modal-body">
          <div class="modal-title">
            <h5 class="mb-4 mt-4 text-dark text-center" id="forgot-password-title">Forgot password?</h5>
          </div>
          <!------name input---->
          <form id="forgotPassword" class="needs-validation" >
              <div id="forgotPasswordMessage" class="text-center hide"></div>
            <div id="forgotPasswordDiv" class="form-group m-4">
              <label for="email-forgot-password">Email address</label>
              <input id="email-forgot-password" type="email" class="form-control" name="email" placeholder="name@example.com" required>
              <div class="invalid-feedback">
                Please provide your email.
              </div>
            </div>
  
            <div id="forgotPasswordBtn" class="form-group m-4">
              <button class="btn-success btn-lg btn-block" type="submit">Send email</button>
            </div>
            <div class="dropdown-divider"></div>
          </form>
        </div>
        <!------/modal body---->
      </div>
    </div>
  </div>